.buy-item {
    padding: 20rpx;
    display: flex;
    font-size: 24rpx;
    color: #666;
}

.buy-item:not(:last-child) {
    border-bottom: 1rpx solid rgba(0,0,0,.04);
}

.buy-item>simg {
    width: 140rpx;
    height: 140rpx;
    background-color: #f6f6f6;
    margin-right: 20rpx;
    flex-shrink: 0;
    border-radius: 10rpx;
}

.buy-item>._info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.buy-item ._row {
    width: 100%;
    display: flex;
    margin-bottom: 10rpx;
}

.buy-item ._bottom-row {
    margin-top: auto;
}

.buy-item ._number {
    margin-left: 20rpx;
    flex-shrink: 0;
}

.buy-item ._title {
    font-size: 1.2em;
    margin-right: auto;
}

.buy-item ._description {
    color: #999;
    line-height: 1.4;
    flex-shrink: 1;
    flex-grow: 0;
}

.buy-item ._options {
    display: flex;
    flex-wrap: wrap;
    padding-right: 20rpx;
}

.buy-item ._options>text {
    line-height: 1.6em;
    padding: 0 10rpx;
    background-color: #eee;
    border-radius: 4rpx;
    margin-right: 10rpx;
    color: #666;
    max-width: 100rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.buy-item ui-price {
    color: #666;
    font-size: 30rpx;
    font-weight: normal;
    flex-shrink: 0;
    margin-left: auto;
}