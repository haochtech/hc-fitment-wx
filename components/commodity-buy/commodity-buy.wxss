._commodity-buy-wrap {
    overflow: hidden;
    height: 100%;
    min-height: 40vh;
    max-height: 80vh;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    position: relative;
}

._commodity-buy-scroll {
    flex: 1;
}

._commodity-buy-top {
    display: flex;
    padding: 20rpx;
}

._commodity-buy-image {
    width: 180rpx;
    height: 180rpx;
    background-color: #f6f6f6;
    margin-right: 20rpx;
    border-radius: 10rpx;
}

._commodity-buy-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

._commodity-buy-info ._title {
    font-size: 36rpx;
    line-height: 1.4;
}

._commodity-buy-info ._description {
    line-height: 1.6;
    font-size: 24rpx;
    color: #999;
    margin: 6rpx 0;
}

._commodity-buy-info ._extra {
    margin-top: auto;
    display: flex;
    font-size: 28rpx;
    align-items: flex-end;
}

._commodity-buy-info ui-price {
    font-size: 34rpx;
    margin-right: 20rpx;
}

._commodity-buy-info ._stock {
    color: #666;
}

._commodity-buy-options {
    padding: 0 20rpx;
    margin-bottom: 20rpx;
}

._commodity-buy-options ._option {
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #f2f2f2;
}

._commodity-buy-options ._option:not(:last-child) {
    margin-bottom: 20rpx;
}

._commodity-buy-options ._label {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
}

._commodity-buy-options ._list {
    display: flex;
    flex-wrap: wrap;
}

._commodity-buy-options ._item {
    font-size: 26rpx;
    line-height: 1.2;
    padding: 10rpx 20rpx;
    background-color: #eee;
    border: 2rpx solid #eee;
    color: #666;
    margin: 0 10rpx 10rpx 0;
    border-radius: 10rpx;
    transition: all .2s ease;
    display: flex;
    align-items: center;
}

._commodity-buy-options ._item-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: .2em;
    border-radius: 4rpx;
}

._commodity-buy-number {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

._commodity-buy-number ._label {
    font-size: 30rpx;
    color: #333;
}

._commodity-buy-number adder {
    margin-left: auto;
}

._commodity-buy-bottom {
    margin: 60rpx 0 20rpx 0;
}

._commodity-buy-btns {
    display: flex;
    transition-property: opacity,-webkit-filter;
    transition-property: opacity,filter;
    transition-property: opacity,filter,-webkit-filter;
    transition-duration: .4s;
    transition-timing-function: ease-out;
}

._commodity-buy-btns._disabled {
    opacity: .2;
    pointer-events: none;
    filter: grayscale(100%);
}

._commodity-buy-btns>view {
    flex: 1;
    line-height: 80rpx;
    font-size: 32rpx;
    margin: 0 20rpx;
    text-align: center;
    background-color: #eee;
    border-radius: 40rpx;
    color: #fff;
    transition: filter .2s ease;
    transition: filter .2s ease,-webkit-filter .2s ease;
    filter: brightness(100%);
}

._commodity-buy-btns>view._hover {
    filter: brightness(110%);
}