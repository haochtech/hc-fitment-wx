@import "../../wuBaseWxss/0.wxss";

._status-view {
    flex-grow: 1;
    flex-shrink: 0;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

._status-view>loading-icon {
    font-size: 160rpx;
    align-self: center;
    justify-self: center;
}

._status-view>i {
    font-size: 200rpx;
    color: #ccc;
}

._status-view>text {
    font-size: 28rpx;
    color: #999;
    margin: 40rpx;
    max-width: 100%;
    max-height: 5.6em;
    line-height: 1.4em;
    overflow: hidden;
    word-break: break-all;
    white-space: pre-wrap;
}

._status-view-version {
    font-size: 28rpx;
    color: #999;
    margin-top: 40rpx;
}

._status-view-button {
    display: inline-block;
    color: #999;
    border: 2rpx solid #999;
    font-size: 32rpx;
    border-radius: 30rpx;
    line-height: 60rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}