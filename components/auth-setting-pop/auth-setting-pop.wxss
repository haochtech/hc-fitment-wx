._auth-setting-pop-wrap {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,.5);
    animation: fade-in .4s 0s 1 ease;
    display: flex;
    justify-content: center;
    align-items: center;
}

._auth-setting-pop-wrap._ready-hide {
    transition: opacity .4s ease;
    opacity: 0;
}

._auth-setting-pop {
    padding: 40rpx 30rpx 30rpx 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 20rpx;
    width: 690rpx;
    box-shadow: 0 4rpx 10rpx 2rpx rgba(0,0,0,.1);
    font-size: 32rpx;
    line-height: 1.4;
    color: #666;
}

._auth-setting-pop-button {
    margin-top: 40rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
}

@-webkit-keyframes fade-in {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}

@keyframes fade-in {
    0% {
        opacity: 0;
    }

    100% {
        opacity: 1;
    }
}