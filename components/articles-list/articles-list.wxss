._column-one-extra ._articles-item ._subtitle {
    display: none;
}

._column-one-extra ._articles-item ._extra {
    margin-top: auto;
    display: flex;
    font-size: 26rpx;
    color: #999;
}

._time {
    margin-left: auto;
}

._column-one-extra ._articles-item ._type {
    margin-right: auto;
}

._articles-list._column-two {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

._column-two ._articles-item {
