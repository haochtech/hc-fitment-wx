    width: 100%;
    height: 189rpx;
}

._column-two ._articles-item>._info {
    padding: 10rpx;
    box-sizing: border-box;
}

._column-two ._articles-item ._title {
    font-size: 30rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
