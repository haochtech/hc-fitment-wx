}

._column-two ._articles-item ._subtitle,._column-two ._articles-item ._extra {
    display: none;
}

._articles-list._column-two-inner {
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
}

._column-two-inner ._articles-item {
    width: 340rpx;
    margin-bottom: 14rpx;
    flex-direction: column;
    border-radius: 10rpx;
    background-color: #fff;
    overflow: hidden;
    border: 1rpx solid #f6f6f6;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
