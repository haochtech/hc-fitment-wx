    transform: translateZ(0);
}

._column-two-inner ._articles-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

._column-two-inner ._articles-item:not(:last-child) {
    border-bottom: 1rpx solid rgba(0,0,0,.04);
}

._column-two-inner ._articles-item>simg {
    display: block;
    width: 100%;
    height: 189rpx;
}

._column-two-inner ._articles-item>._info {
    padding: 10rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,.8);
    color: #fff;
    width: 100%;
    box-sizing: border-box;
}

._column-two-inner ._articles-item ._title {
    font-size: 30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
