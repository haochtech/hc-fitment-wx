    box-sizing: border-box;
}

._column-two-inner ._articles-item ._subtitle,._column-two-inner ._articles-item ._extra {
    display: none;
}

._immersive-dark ._articles-item {
    width: 710rpx;
    height: 533rpx;
    position: relative;
    transform: translateZ(0);
    overflow: hidden;
    margin: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 16rpx 4rpx rgba(0,0,0,.04);
}

._immersive-dark ._articles-item>simg {
    position: absolute;
    width: 100%;
    height: 100%;
    transform: translateZ(0);
    transition: transform .2s ease;
    transition: transform .2s ease,-webkit-transform .2s ease;
}

._immersive-dark ._articles-item._hover>simg {
    transform: translateZ(0) scale(1.1);
}

._immersive-dark ._articles-item>._info {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: rgba(0,0,0,.68);
    color: #f9f9f9;
}

._immersive-dark ._articles-item ._title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    line-height: 1.2;
    max-height: 2.4em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

._immersive-dark ._articles-item ._subtitle {
    flex-shrink: 1;
    font-size: 28rpx;
    line-height: 1.4;
    max-height: 4.2em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

._immersive-dark ._articles-item ._extra {
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}

._extra .flag {
    display: flex;
    font-size: 28rpx;
    align-items: center;
}

._extra .flag .view {
    margin-right: 20rpx;
}

._extra .flag .fav {
    position: relative;
    z-index: 9999;
    display: inline;
}

._extra .flag .iconfont {
    font-size: 28rpx;
}

._immersive-dark ._articles-item ._type {
    font-size: 28rpx;
    background-color: rgba(0,0,0,.5);
    padding: 0 20rpx;
    line-height: 46rpx;
    border-radius: 6rpx;
}

._immersive-dark ._articles-item ._time {
    font-size: 28rpx;
    color: rgba(255,255,255,.8);
    margin-left: auto;
}

._immersive-dark ._articles-item report-submit {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
}

._immersive-light ._articles-item {
    margin: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    transform: translateZ(0);
    box-shadow: 0 6rpx 20rpx 6rpx rgba(0,0,0,.04);
    background-color: #fff;
    display: flex;
    flex-direction: column;
    transition: box-shadow .2s ease,-webkit-transform .2s ease;
    transition: transform .2s ease,box-shadow .2s ease;
    transition: transform .2s ease,box-shadow .2s ease,-webkit-transform .2s ease;
    position: relative;
    z-index: 0;
}

._immersive-light ._articles-item._hover {
    transform: translateZ(0) scale(1.04);
    box-shadow: 0 6rpx 30rpx 10rpx rgba(0,0,0,.06);
    z-index: 1;
}

._immersive-light ._articles-item:not(:last-child) {
    margin-bottom: 30rpx;
}

._immersive-light ._articles-item>simg {
    display: block;
    width: 100%;
    background-color: #f9f9f9;
}

._immersive-light ._articles-item>._info {
    padding: 20rpx;
}

._immersive-light ._articles-item ._title {
    font-size: 36rpx;
    line-height: 1.2;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
}

._immersive-light ._articles-item ._subtitle {
    font-size: 28rpx;
    line-height: 1.4;
    color: #777;
}

._immersive-light ._articles-item ._extra {
    display: none;
}

