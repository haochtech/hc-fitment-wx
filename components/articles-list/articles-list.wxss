._articles-item {
    display: block;
}

._articles-list-scroll._scroll-order {
    height: -webkit-fit-content;
    width: 100%;
    overflow: hidden;
}

._scroll-order ._articles-list {
    padding: 20rpx 10rpx;
    display: flex;
    width: -webkit-fit-content;
}

._scroll-order ._articles-item {
    margin: 0 10rpx;
    width: 360rpx;
    display: block;
    text-align: left;
    border-radius: 10rpx;
    overflow: hidden;
    background-color: #fff;
    border: 1rpx solid #f6f6f6;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
}

._scroll-order ._articles-item._hover {
    box-shadow: 0 4rpx 14rpx 2rpx rgba(0,0,0,.06);
}

._scroll-order ._articles-item>simg {
    display: block;
    width: 360rpx;
    height: 200rpx;
}

._scroll-order ._articles-item ._info {
    display: block;
    padding: 10rpx;
}

._scroll-order ._articles-item ._title {
    display: block;
    color: #333;
    font-size: 24rpx;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

._scroll-order ._articles-item ._subtitle,._scroll-order ._articles-item ._extra {
    display: none;
}

._column-one ._articles-item {
    padding: 30rpx 20rpx;
    display: flex;
    height: 120rpx;
    overflow: hidden;
    transition: background-color .2s ease;
}

._column-one ._articles-item._hover {
    background-color: rgba(0,0,0,.04);
}

._column-one ._articles-item:not(:last-child) {
    border-bottom: 1rpx solid rgba(0,0,0,.04);
}

._column-one ._articles-item>simg {
    display: block;
    width: 216rpx;
    height: 100%;
    margin-right: 20rpx;
    flex-shrink: 0;
    background-color: #f9f9f9;
    border-radius: 10rpx;
}

._column-one ._articles-item>._info {
    flex: 1;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

._column-one ._articles-item ._title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

._column-one ._articles-item ._subtitle {
    font-size: 26rpx;
    color: #888;
    line-height: 1.4;
    max-height: 2.8em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

._column-one ._articles-item ._extra {
    display: none;
}

._column-one-extra ._articles-item {
    padding: 30rpx 20rpx;
    display: flex;
    height: 120rpx;
    overflow: hidden;
    transition: background-color .2s ease;
}

._column-one-extra ._articles-item._hover {
    background-color: rgba(0,0,0,.04);
}

._column-one-extra ._articles-item:not(:last-child) {
    border-bottom: 1rpx solid rgba(0,0,0,.04);
}

._column-one-extra ._articles-item>simg {
    display: block;
