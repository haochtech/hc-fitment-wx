page {
    background: #eee;
}

.bg {
    position: fixed;
    z-index: 1;
    width: 100vw;
    height: 100vh;
    left: 0;
    top: 0;
    background: #000000;
    opacity: 0.5;
    display: none;
}

.bg.show {
    display: block;
}

.district .nav {
    background-color: #fff;
    display: flex;
    white-space: nowrap;
    justify-content: space-between;
}

.district .nav>text {
    font-size: 24rpx;
    text-align: center;
    display: inline-block;
    padding: 30rpx;
    line-height: 1;
    height: 32rpx;
}

.nav-scroll {
    border-bottom: 2rpx solid #eee;
    height: 94rpx;
    background: #fff;
    position: relative;
    z-index: 12;
}

.district .nav>text .icon {
    font-size: 22rpx;
    margin-left: 4rpx;
}

.district .content-main .xq-item {
    width: 100%;
    padding-top: 30rpx;
}

.district .content-main .xq-item text {
    width: 27%;
    box-sizing: border-box;
    padding: 14rpx 0;
    border: 2rpx solid #eee;
    text-align: center;
    border-radius: 6rpx;
    margin: 0 9.5% 30rpx 0;
    display: inline-block;
    line-height: 1.3;
    font-size: 24rpx;
}

.district .content-main .xq-item text:nth-child(3n) {
    margin-right: 0;
}

.district .view,.district text {
    font-size: 28rpx;
}

.content-main {
    position: relative;
    width: 100%;
    background: #fff;
}

.content-main>view {
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    z-index: 10;
    background: #fff;
    box-sizing: border-box;
    padding: 0 30rpx;
    box-shadow: 0 3px 3px rgba(0,0,0,.1);
    overflow: hidden;
}

.content-main>view.on {
    display: flex;
    transition: all 0.3s;
}

.flex-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.flex {
    display: flex;
    align-items: center;
}

.not-find {
    padding: 100rpx 10rpx;
    font-size: 32rpx;
    color: darkgrey;
}

.main {
    padding-bottom: 50rpx;
}