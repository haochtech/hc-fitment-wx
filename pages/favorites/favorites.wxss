page {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    background-color: #f3f3f3;
}

.main-view {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.favorites-item {
    display: flex;
    padding: 20rpx;
    background-color: #fff;
    margin: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 16rpx 4rpx rgba(0,0,0,.04);
    transition: box-shadow .2s ease;
}

.favorites-item._hover {
    box-shadow: 0 6rpx 20rpx 4rpx rgba(0,0,0,.06);
}

.favorites-item>simg {
    width: 190rpx;
    height: 190rpx;
    margin-right: 20rpx;
}

.favorites-item ._button {
    margin-left: auto;
    padding: 0 20rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    background-color: #fff;
    border: 1rpx solid #ddd;
    border-radius: 6rpx;
    color: #666;
    transition: background-color .2s ease;
}

.favorites-item ._button._hover {
    background-color: #f4f4f4;
}

.favorites-item ui-price {
    font-size: 36rpx;
}