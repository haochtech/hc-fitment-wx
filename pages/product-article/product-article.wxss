page {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
}

.article-view {
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    line-height: 1.4;
    color: #333;
    letter-spacing: .06em;
}

.article-title {
    font-weight: bold;
    font-size: 1.4em;
    margin-bottom: 16rpx;
}

.article-subtitle {
    font-size: 1em;
    line-height: 1.4;
    color: #555;
    margin-bottom: 16rpx;
}

.article-source {
    letter-spacing: 0;
    white-space: nowrap;
    display: flex;
    align-items: center;
    margin-top: 26rpx;
    padding-bottom: 26rpx;
    border-bottom: 2rpx solid #eee;
    margin-bottom: 40rpx;
}

.article-author {
    flex-shrink: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: .9em;
    color: #666;
}

.article-time {
    color: #999;
    font-size: .8em;
}

.article-content {
    line-height: 1.6;
}

.article-flag {
    margin-left: auto;
    padding: 4rpx 10rpx;
    font-size: .8em;
    border-radius: 6rpx;
    color: #888;
    display: flex;
    align-items: center;
}

.article-flag .iconfont {
    font-size: 28rpx;
}

.article-action {
    margin-top: 40rpx;
    width: 100%;
    min-height: 100%;
    background-color: #eee;
}