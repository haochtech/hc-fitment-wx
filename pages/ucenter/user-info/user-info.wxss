.user-info {
    padding: 40rpx 0;
}

.user-info .user-item .item {
    border-bottom: 1rpx solid #e1e1e1;
}

.user-info .user-item .item image {
    margin-right: 20rpx;
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}

.user-info .user-item .item .box {
    line-height: 120rpx;
    height: 120rpx;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    background-color: #fff;
    margin: 0;
    border-radius: 0;
}

.user-info .user-item .item .box::after {
    display: none;
}

.user-info .user-item .item .label {
    color: #000;
    font-weight: 700;
}

.user-info .user-item .info {
    color: #999;
    display: flex;
    width: 300rpx;
    justify-content: flex-end;
}

.user-info .user-item .info text {
    margin-right: 20rpx;
}