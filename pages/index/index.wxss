.auth-hint {
    position: fixed;
    top: 15vh;
    width: 86vw;
    left: 7vw;
    text-align: center;
    z-index: 999999;
    border-radius: 20rpx;
    background: #fff;
}

.auth-hint .content {
    line-height: 0;
}

.auth-hint .version {
    font-size: 26rpx;
    color: #eee;
}

.auth-bg {
    position: fixed;
    top: 0;
    background: #000;
    opacity: 0.5;
    width: 100vw;
    left: 0;
    height: 100vh;
    text-align: center;
    z-index: 99999;
}

.auth-hint .head {
    padding: 30rpx 0;
    font-size: 36rpx;
    color: #888;
    border-bottom: 2rpx solid #eee;
    margin-bottom: 20rpx;
    line-height: 1;
}

.auth-hint .top {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 20rpx;
    line-height: 1.7;
}

.auth-hint image {
    width: 500rpx;
}

.auth-hint .yoxi {
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    background: #04be01;
    border-radius: 80rpx;
    width: 500rpx;
    margin: 0 auto;
    font-size: 32rpx;
}

.new-modal {
    width: 750rpx;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 9999;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -ms-grid-row-align: center;
    align-items: center;
}

.new-modal-content {
    width: 630rpx;
    height: auto;
    background-color: #fff;
    border-radius: 16rpx;
    position: relative;
}

.new-modal-header {
    padding: 48rpx 24rpx 32rpx 24rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 13pt;
}

.new-modal-body {
    padding: 0 24rpx;
    min-height: 400rpx;
    color: #666;
    margin-bottom: 48rpx;
    max-height: 700rpx;
    overflow-y: auto;
}

.new-modal-footer {
    height: 88rpx;
    width: 100%;
    border-top: 1rpx solid #e2e2e2;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.btn {
    display: block;
    background: none;
    height: auto;
    width: 100%;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
    line-height: inherit;
    font-family: inherit;
    color: inherit;
    text-align: inherit;
}

.btn::after {
    border-radius: 0!important;
    border: none!important;
}

.new-modal-btn {
    height: 100%;
    text-align: center;
    line-height: 88rpx;
    color: #666;
    font-size: 15pt;
    border-right: 1rpx solid #e2e2e2;
    min-width: 0;
    -webkit-box-flex: 1;
    -ms-flex-positive: 1;
    flex-grow: 1;
    -ms-flex-negative: 1;
    flex-shrink: 1;
}

.new-modal-btn:last-child {
    color: #ff4544;
    border-right: none;
}